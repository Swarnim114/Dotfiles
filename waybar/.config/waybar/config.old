{   "height":25,
    "modules-left": ["custom/power", "hyprland/workspaces", "custom/media"],
    "modules-center": [ "clock"],
    "modules-right": ["tray","custom/powerprofile", "battery","backlight", "pulseaudio"],

  // backlight:
  "backlight": {
